---
interface Props {
    name: string;
    image: string;
    description: string;
    skills: string[];
    href?: string;
}

const { name, image, description, skills, href } = Astro.props;
---
<main>
    <h3 class="text-2xl mt-2 font-bold">{name}</h3>
    <div class="mt-2 divider divider-neutral" />
    <div class="flex flex-col lg:flex-row items-center justify-between mt-5">
        <a href={href} >
        <img src={image} alt={name} class="rounded-full w-24 h-24 mt-3" width={150} height={150} />
        </a>
        <div class="flex flex-col">
            <div class="flex flex-row space-x-2 mt-3 justify-around">
                {skills.map((skill) => (
                    <span class="badge badge-neutral badge-outline">{skill}</span>
                ))}
            </div>
            <div class="mt-2 divider divider-neutral" />
        <p class="text-center text-lg lg:mt-0">{description}</p>
        </div>
    </div>
</main>